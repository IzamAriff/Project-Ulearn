<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.Pane?>

<Pane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <Label layoutX="50.0" layoutY="44.0" text="Welcome to ULEARN!" />
        <Label layoutX="50.0" layoutY="77.0" text="Please provide the following details to log in." />
        <Label layoutX="50.0" layoutY="122.0" text="Name:" />
        <TextField fx:id="nameField" layoutX="133.0" layoutY="119.0" />
        <Label layoutX="50.0" layoutY="157.0" text="Email:" />
        <TextField fx:id="emailField" layoutX="133.0" layoutY="154.0" />
        <Label layoutX="50.0" layoutY="192.0" text="Password:" />
        <PasswordField fx:id="passwordField" layoutX="133.0" layoutY="189.0" />
        <Label layoutX="50.0" layoutY="236.0" text="Please select a type of user from the list below." />
        <ComboBox fx:id="userTypeComboBox" layoutX="50.0" layoutY="268.0" prefWidth="150.0">
            <items>
                <FXCollections fx:factory="observableArrayList">
                    <String fx:value="Student" />
                    <String fx:value="Lecturer" />
                </FXCollections>
            </items>
        </ComboBox>
        <Button fx:id="registerButton" layoutX="243.0" layoutY="268.0" mnemonicParsing="false" text="Register" />
    </children>
</Pane>
